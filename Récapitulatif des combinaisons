void combinaisoncroixtroisquatre(char matrice[10][15])
{
    combinaisoncroixquatretroisgauche(matrice);
    combinaisoncroixquatretroisdroite(matrice);

    combinaisoncroixtroisquatre1(matrice);
    combinaisoncroixtroisquatre2(matrice);

}

