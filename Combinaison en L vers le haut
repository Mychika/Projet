void combinaisonLdroitehauttroistrois(char matrice[10][15]) //motif en L a droite en haut de la ligne de trois caractéres en lignes et colonnes
{
    int i; int j;
    for (i=2;i<10;i++)
    {
        for (j=0;j<13;j++)
        {
            if ((matrice[i][j]==matrice[i][j+1])&&(matrice[i][j+1]==matrice[i][j+2])&&
                (matrice[i][j+2]==matrice[i-1][j+2])&&(matrice [i-1][j+2]==matrice[i-2][j+2]))
            {
                matrice[i][j]=' ';
                matrice[i][j+1]=' ' ;
                matrice[i][j+2]=' ';
                matrice[i-1][j+2]=' ';
                matrice[i-2][j+2]=' ';
            }
        }
    }
}

